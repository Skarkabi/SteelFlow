<div class="col-md-12">
    <div class="table-buttons" id="table-buttons">
        <a href="/users/create" role="button" class="btn btn-outline-dark" id="create-new"><i class="fas fa-plus"></i>  Register New Supplier</a>
    </div>
</div>
{{!-- Displays all users --}}
<div class="col-md-12">
    <table id="filterable-table" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Phone Number</th>
                <th scope="col">E-mail</th>
                <th scope="col">Quantity of Items in Stock</th>
            </tr>
        </thead>
        <tbody>
            {{#each suppliers}}
                <tr>
                    <td><a href="/supplier/view/{{this.name}}" id="userId-{{this.id}}"> {{counter @index}}</a></td>
                    <td><a href="/supplier/view/{{this.name}}" id="userId-{{this.id}}">{{this.name}}</a></td>
                    <td><a href="/supplier/view/{{this.name}}">{{this.phone}}</a></td>
                    <td><a href="/supplier/view/{{this.name}}">{{this.email}}</a></td>
                    <td><a href="/supplier/view/{{this.name}}">{{this.Stock_Items.length}}</a></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script>
    function deleteUser(id){
        if(confirm("Are you sure you want to delete this user?")){
            window.location.href = "users/delete/" + id;

        }

    }
    
</script>

<style>
    #filterable-table>tbody>tr:hover {
        cursor: pointer;
        color: #fff;
        background-color:#BF2B45;
        transition: background-color 0.3s;
    }

</style>
