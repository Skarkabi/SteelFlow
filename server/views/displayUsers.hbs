{{#if user.restrictions.create_users}}
<div class="col-md-12">
    <div class="table-buttons" id="table-buttons">
        <a href="/users/create" role="button" class="btn btn-outline-dark" id="create-new"><i class="fas fa-plus"></i>  Create New User</a>
    </div>
</div>
{{/if}}
{{!-- Displays all users --}}
<div class="col-md-12">
    <table id="filterable-table" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Employee ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">E-mail</th>
                <th scope="col">Department</th>
                <th scope="col">Division</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
                <tr>
                    <td><a href="/users/view/{{this.id}}" id="userId-{{this.id}}"> {{counter @index}}</a></td>
                    <td><a href="/users/view/{{this.id}}" id="userId-{{this.id}}">{{this.id}}</a></td>
                    <td><a href="/users/view/{{this.id}}">{{this.firstName}}</a></td>
                    <td><a href="/users/view/{{this.id}}">{{this.lastName}}</a></td>
                    <td><a href="/users/view/{{this.id}}">{{this.email}}</a></td>
                    <td><a href="/users/view/{{this.id}}">{{this.department}}</a></td>
                    <td><a href="/users/view/{{this.id}}">{{this.division}}</a></td>
                    <td class = "table-actions">
                        <a href="/users/view/{{this.id}}" role="button"  id="view" class="button"><i class="fas fa-user-alt" aria-hidden="true"></i></a>
                       <a href="/users/delete/{{this.id}}" role="button" id="delete" class="delete"data-confirm="Are you sure to delete Employee ID# {{this.id}}?"><i class="fas fa-trash" aria-hidden="true"></i></a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script>
    function deleteUser(id){
        if(confirm("Are you sure you want to delete this user?")){
            window.location.href = "users/delete/" + id;

        }
        
    }

</script>

<style>
    #filterable-table>tbody>tr:hover {
        cursor: pointer;
        color: #fff;
        background-color:#BF2B45;
        transition: background-color 0.3s;
    }

</style>