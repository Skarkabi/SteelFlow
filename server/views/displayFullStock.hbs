<div class="col-md-12">
    <div class="table-buttons" id="table-buttons">
        <a href="/users/create" role="button" class="btn btn-outline-dark" id="create-new"><i class="fas fa-plus"></i> Add Stock</a>
    </div>
</div>
{{!-- Displays all users --}}
<div class="col-md-12">
    <table id="filterable-table" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Type</th>
                <th scope="col">Category</th>
                <th scope="col">Total Quantity</th>
                <th scope="col">Reserved</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each stock}}
                <tr>
                    <td><a href="/stock/view/{{this.id}}" id="userId-{{this.id}}"> {{counter @index}}</a></td>
                    <td><a href="/stock/view/{{this.id}}" id="userId-{{this.id}}">{{this.type}}</a></td>
                    <td><a href="/stock/view/{{this.id}}">{{this.name}}</a></td>
                    <td><a href="/stock/view/{{this.id}}">{{this.totalQuantity}} ({{this.quantity_unit}})</a></td>
                    <td><a href="/stock/view/{{this.id}}">{{this.totalReserverd}} ({{this.quantity_unit}})</a></td>
                    <td class = "table-actions">
                        <a href="/stock/view/{{this.id}}" role="button"  id="view" class="button"><i class="fas fa-user-alt" aria-hidden="true"></i></a>
                       <a href="/stock/delete/{{this.id}}" role="button" id="delete" class="delete"data-confirm="Are you sure to delete Employee ID# {{this.id}}?"><i class="fas fa-trash" aria-hidden="true"></i></a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<script>
    function deleteUser(id){
        if(confirm("Are you sure you want to delete this user?")){
            window.location.href = "users/delete/" + id;
        }
    }
</script>
