{{#each existingUser.Orders}}
    {{#if (isdefined this.requestedBy @root.existingUser.id)}}
        <div class="form-row" style="padding-top:20px; padding-left: 20px">              
            <div class="form-group col" style="border-bottom:solid; border-width: thin; border-color: #e7e7e7;">
                <div class="form-row">
                    <label>Order #{{this.order_id}}</label>
                </div>
                <div class="form-row">
                    <div class="form-group col-sm-5 display-user">
                        <label for="start">Start Date   -   End Date</label>
                        <input type="text" class="form-control-plaintext" name="start" id="start" value="{{formatDate this.createdAt}}    -   {{formatDate this.delivery_date}}" readonly>
                    </div>
                    <div class="form-group col-sm-5">
                        <div class="form-row">
                            <label for="requestd" class="col-sm-3 col-form-label">Requested By:</label>
                            <div class="col-sm-8">
                                <input type="text" readonly class="form-control-plaintext" id="requestd" value="{{this.requested}}">
                            </div>
                        </div>
                        <div class="form-row">
                            <label for="status" class="col-sm-3 col-form-label">Status:</label>
                            <div class="col-sm-8">
                                <input type="text" readonly class="form-control-plaintext" id="status" value="{{this.status}}">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
{{/each}}