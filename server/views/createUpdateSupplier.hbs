<div class="col-md-12">
    <form action="{{action}}" method="POST">
        {{!-- User Information --}}
        <div class="section-wrapper">
            <div class="section-title">
                <h4><i class="fas fa-store-alt"></i> Supplier Information</h4>
                <hr class="my-3">
            </div>
            <div class="section-content">
                <div class="form-row">
                    <div class="form-group col required">
                        <label for="name">Supplier Name</label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Supplier's Name" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="email">E-mail</label>
                        <input type="email" placeholder="E-mail" id="firstName" name="email" class="form-control">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col">
                        <label for="phone">Contact Number</label>
                        <input type="phone" placeholder="(XXX)-XXX-XXXX" id="phone" name="phone" class="form-control"> 
                    </div>
                </div>
            </div>
            <div style="float:right;">
                <button type="submit" id="submit" name="submit" class="btn btn-primary justfiy-content-end"><i class="far fa-save"></i> Add</button>
            </div>
            
        </div>
    </form>
</div>

<script>
    $(document).ready(function(){
        $(document).on("click", "#restrictions", function(e){
            e.preventDefault();

        })

    })
    
</script>